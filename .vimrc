set nocompatible 
set autoindent  
set smartindent
set wrap
set nowrapscan 
set nobackup 
set visualbell 
set ruler 
set shiftwidth=2
set nu
set fileencoding=utf-8 
set tenc=utf-8    
set expandtab 
set hlsearch
set ignorecase 
set tabstop=4 
set lbr
set incsearch 
syntax on 
filetype indent on 
set background=dark
colorscheme desert 
set backspace=eol,start,indent 
set history=1000 " saved in .viminfo
